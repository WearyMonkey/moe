{
  "compilerOptions": {
    "plugins": [
      {
        "transform": "./src/tsc_transformer.ts"
      }
    ],
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "importHelpers": false,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "dom",
      "dom.iterable",
      "es2016"
    ],
    "moduleResolution": "node",
    "outDir": "target",
    "strict": true,
    "skipLibCheck": true,
    "target": "es6",
    "sourceMap": true,
    "module": "ESNext"
  },
  "include": [
    "src/**/*"
  ]
}
